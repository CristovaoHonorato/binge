{
  "name": "binge",
  "version": "0.0.1-beta.7",
  "description": "Tool for managing monorepos with local packages",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && babel src -d lib",
    "clean": "rimraf lib",
    "dev": "npm run clean && babel -w src -d lib",
    "lint": "eslint src",
    "test": "mocha",
    "prepublish": "npm run lint && npm run prettier:check && npm run build",
    "prettier": "prettier --write --tab-width 4 --no-semi --single-quote --trailing-comma es5 \"./src/**/*.js\"",
    "prettier:check": "prettier --list-different --tab-width 4 --no-semi --single-quote --trailing-comma es5 \"./src/**/*.js\""
  },
  "author": "Cristovao Honorato",
  "license": "ISC",
  "dependencies": {
    "async": "^2.0.1",
    "chalk": "^1.1.1",
    "chokidar": "^1.6.0",
    "cross-spawn": "^5.1.0",
    "fs-extra": "^3.0.0",
    "invariant": "^2.2.1",
    "karma": "^1.7.0",
    "meow": "^3.7.0",
    "pad": "^1.0.0",
    "read-package-json": "^2.0.10",
    "semver": "^5.0.0",
    "semver-intersect": "1.1.0",
    "signal-exit": "^3.0.2"
  },
  "bin": {
    "binge": "./bin/binge.js"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.0.0",
    "eslint-config-prettier": "^2.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "prettier": "^1.5.2",
    "rimraf": "^2.6.1"
  }
}
